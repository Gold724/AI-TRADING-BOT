# API Keys and Authentication
API_KEY=your_api_key_here
TRADING_ACCOUNT_ID=your_account_id_here

# ✅ Binance API
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# ✅ Broker Credentials
BULENOX_USERNAME=your_bulenox_username
BULENOX_PASSWORD=your_bulenox_password
BROKER_USERNAME=your_broker_username
BROKER_PASSWORD=your_broker_password
BROKER_URL=https://bulenox.com/member/login
BULENOX_ACCOUNT_ID=your_bulenox_account_id

# ✅ Chrome Profile Settings
# For Windows local development
BULENOX_PROFILE_PATH=C:\Users\YourUsername\AppData\Local\Google\Chrome\User Data
BULENOX_PROFILE_NAME=Profile X
CHROMEDRIVER_PATH=path\to\chromedriver.exe

# For Ubuntu cloud deployment
# BULENOX_PROFILE_PATH=/root/.config/google-chrome
# BULENOX_PROFILE_NAME=Default

# ✅ Cloud Execution Settings
HEADLESS=true
USE_TEMP_PROFILE=true
SCREENSHOT_ON_FAILURE=true
CHROME_OPTS="--headless=new --no-sandbox --disable-dev-shm-usage --disable-gpu --window-size=1920,1080"

# ✅ Vast.ai Cloud API
VAST_API_KEY=your_vast_api_key_here

# ✅ GitHub Integration
GITHUB_REPO=https://github.com/username/repository.git
GITHUB_USERNAME=your_github_username
GITHUB_PAT=your_github_personal_access_token

# ✅ API Settings
PORT=5000
DEBUG=false
FLASK_SECRET_KEY=generate_a_secure_random_key
ENCRYPTION_KEY=generate_a_secure_fernet_key
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
CORS_ORIGINS=*

# ✅ Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_VERIFICATION_TOKEN=your_slack_verification_token

# ✅ Logging & Environment
LOG_LEVEL=INFO
ENVIRONMENT=development